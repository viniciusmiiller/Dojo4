@model Dojo4.ViewModels.AlunoIndexViewModel
@{
    ViewBag.Title = "Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>Aluno</h2>

        @if (Model.Alunos.Count > 0)
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr><th>Nome</th></tr>
                </thead>
                <tbody>
                    @foreach (var aluno in Model.Alunos)
                    {
                        <tr><td>@Html.ActionLink(@aluno.Nome, "Details", new { aluno.Id })</td></tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-info">Não foi encontrado resultado.</p>
        }
    </div>
</div>