@model IEnumerable<Dojo4.Models.Faixa>
@{
    ViewBag.Title = "Faixa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>Faixa</h2>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr><th>Nome</th></tr>
                </thead>
                <tbody>
                    @foreach (var faixa in Model)
                    {
                        <tr><td>@Html.ActionLink(@faixa.Nome, "Details", new { faixa.Id })</td></tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-info">Não foi encontrado resultado.</p>
        }
    </div>
</div>