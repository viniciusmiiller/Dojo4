@model IEnumerable<Dojo4.Models.TipoDeAssociacao>
@{
    ViewBag.Title = "Tipo de associação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>Tipo de associação</h2>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr><th>Nome</th></tr>
                </thead>
                <tbody>
                    @foreach (var tipoAss in Model)
                    {
                        <tr><td>@Html.ActionLink(@tipoAss.Nome, "Details", new { tipoAss.Id })</td></tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-info">Não foi encontrado resultado.</p>
        }
    </div>
</div>